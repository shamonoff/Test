<!DOCTYPE ViewObject SYSTEM "jbo_03_01.dtd">
<!---->
<ViewObject
  xmlns="http://xmlns.oracle.com/bc4j"
  Name="FeaturedItemVO"
  Version="11.1.1.55.36"
  BindingStyle="OracleName"
  CustomQuery="true"
  PageIterMode="Full"
  UseGlueCode="false">
  <DesignTime>
    <Attr Name="_codeGenFlag2" Value="Access|VarAccess"/>
    <Attr Name="_isExpertMode" Value="true"/>
  </DesignTime>
  <SQLQuery>
    <![CDATA[with MySummary AS (
select max(sum(quantity)) as MaxItemsOrdered 
from order_items 
group by product_id
)
select product_id, product_name, list_price, items_ordered from (
  SELECT  OrderItems.product_id,
        ProductsBase.PRODUCT_NAME,
        ProductsBase.LIST_PRICE,
        sum(OrderItems.quantity) as Items_Ordered
        from MySummary, Order_Items OrderItems, Products_Base ProductsBase
        where ProductsBase.product_id = OrderItems.product_id
        GROUP BY 
        OrderItems.product_id, 
        ProductsBase.PRODUCT_NAME, 
        ProductsBase.LIST_PRICE
), MySummary
       where Items_Ordered=MaxItemsOrdered]]>
  </SQLQuery>
  <ViewAttribute
    Name="ProductId"
    IsUpdateable="false"
    IsPersistent="false"
    IsNotNull="true"
    PrecisionRule="true"
    Precision="15"
    Scale="0"
    Type="java.math.BigDecimal"
    ColumnType="NUMBER"
    AliasName="PRODUCT_ID"
    Expression="PRODUCT_ID"
    SQLType="NUMERIC">
    <DesignTime>
      <Attr Name="_DisplaySize" Value="22"/>
    </DesignTime>
  </ViewAttribute>
  <ViewAttribute
    Name="ProductName"
    IsUpdateable="false"
    IsPersistent="false"
    IsNotNull="true"
    PrecisionRule="true"
    Precision="50"
    Type="java.lang.String"
    ColumnType="VARCHAR2"
    AliasName="PRODUCT_NAME"
    Expression="PRODUCT_NAME"
    SQLType="VARCHAR">
    <DesignTime>
      <Attr Name="_DisplaySize" Value="50"/>
    </DesignTime>
  </ViewAttribute>
  <ViewAttribute
    Name="ListPrice"
    IsUpdateable="false"
    IsPersistent="false"
    IsNotNull="true"
    PrecisionRule="true"
    Precision="8"
    Scale="2"
    Type="java.math.BigDecimal"
    ColumnType="NUMBER"
    AliasName="LIST_PRICE"
    Expression="LIST_PRICE"
    SQLType="NUMERIC">
    <DesignTime>
      <Attr Name="_DisplaySize" Value="22"/>
    </DesignTime>
  </ViewAttribute>
  <ViewAttribute
    Name="ItemsOrdered"
    IsUpdateable="false"
    IsPersistent="false"
    PrecisionRule="true"
    Type="java.math.BigDecimal"
    ColumnType="NUMBER"
    AliasName="ITEMS_ORDERED"
    Expression="ITEMS_ORDERED"
    SQLType="NUMERIC">
    <DesignTime>
      <Attr Name="_DisplaySize" Value="22"/>
    </DesignTime>
  </ViewAttribute>
</ViewObject>
